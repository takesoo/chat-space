.container
  = render 'shared/sidebar'
  .main
    .group-info
      .group-info__wrapper
        .group-info__name
          %h1= @group.name
        .group-info__member
          %ul.member__list
            %li.member__list_title Member :
            %li.member aaaaaa
            %li.member bbbbbb
            %li.member cccccc
      .group-info__edit
        = link_to 'Edit', edit_group_path(@group), class: "edit-btn"
    .messages
      = render 'message'
      = render 'message'
      = render 'message'
    .form
      = form_for [@group, @message], html: {class: 'form__input'} do |f|
        .input-box
          = f.text_field :body, {name: :text, placeholder: "type a message", class: "text_field"}
          %label
            %i.far.fa-image.image-icon
            = f.file_field :datafile, {class: "input__file"}
        = f.submit "Send", {class: "input__btn"}
